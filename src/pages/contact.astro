---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@components/sections/misc/ContactSection.astro";
import { SITE } from "@data/constants";

const pageTitle: string = `Contact | ${SITE.title}`;
---

<!--Utilizing MainLayout for the outer layout of the page, and defining meta for SEO purposes-->
<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://screwfast.uk/contact",
    "url": "https://screwfast.uk/contact",
    "name": "Contact Us | ScrewFast",
    "description":
      "We’d love to hear from you! Whether you're planning your next vacation, organizing a special event, or need assistance with travel or event logistics, our team at PKT Travels, Tours & Events is here to help. Have questions about our travel packages, need help with an upcoming event, or want to create a completely custom itinerary or event experience? We're here to listen and offer personalized solutions. Tell us more about your plans, and we’ll get back to you with expert guidance and tailored recommendations.",
    "isPartOf": {
      "@type": "WebSite",
      "url": "https://screwfast.uk",
      "name": "ScrewFast",
      "description":
        "ScrewFast offers top-tier hardware tools and expert construction services to meet all your project needs.",
    },
    "inLanguage": "en-US"
  }}
>
  <ContactSection />
</MainLayout>
