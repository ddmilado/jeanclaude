---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import    TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";
import heroImage from "@images/hero-image.avif";
import faqs from "@data/faqs.json";
import features from "@data/features.json"; 
import pricing from "@data/pricing.json";
import featureImage from "@images/features-image.avif";
import construction from "@images/construction-image.avif";
import tools from "@images/automated-tools.avif";
import dashboard from "@images/dashboard-image.avif";
import type { ImageMetadata } from 'astro';
import shippingImage1 from '@images/shipping1.jpg';
import shippingImage2 from '@images/shipping2.jpg';
import shippingImage3 from '@images/shipping3.jpg';
import shippingImage4 from '@images/shipping4.jpg';

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];

const backgroundImages = [
  shippingImage1,
  shippingImage2,
  shippingImage3,
  shippingImage4
];
---

<MainLayout>
  <div class="min-h-screen">
    <nav class="py-6">
      <div class="relative -mt-[80px]">
        <div id="slideshowBackground" class="bg-cover bg-center bg-fixed rounded-[2.5%] transition-all duration-1000" style={`background-image: url('${backgroundImages[0].src}')`}>
          <div class="bg-white/5 rounded-[2.5%]">
            <HeroSection
              title=`Reliable Shipping, on time Everytime with   <span
                  class="text-orange-600 dark:text-orange-600">ARD GHADEER SHIPPING CO.</span>`
              subTitle=" From doorstep deliveries to global logistics, we ensure your shipment arrive safely and on schedule."
              primaryBtn="Start Exploring"
              primaryBtnURL="/products"
              secondaryBtn="Contact Sales Team"
              secondaryBtnURL="/contact"
              withReview={true}
              avatars={avatarSrcs}
              rating=`<span class="font-bold text-white">4.8 / 5</span>`
              starCount={4}
              reviews=`<span class="font-bold text-white">From Over 12.8k Reviews</span>`
            />
          </div>
        </div>
      </div>
    </nav>

    <main>

      <FeaturesGeneral
        title="Meeting Global Shipping Demands"
        subTitle="At ARD GHADEER, we address the complex challenges of modern logistics and transportation. From reliable shipping services to cutting-edge tracking tools, we're committed to ensuring seamless deliveries and helping you achieve your business goals."

        features={features}
      />

      <FeaturesNavs
        title=`Customize <span class="text-yellow-500 dark:text-yellow-400">ARD Ghadeer</span>'s offerings to perfectly suit your Shipping needs.`
        tabs={[
          {
            heading: "Dedicated Logistics Teams",
            content:
              "Benefit from our experienced and committed teams who ensure every shipment is delivered on time and in perfect condition. Rely on our expertise and personalized support throughout your logistics journey.",
            svg: "tools",
            src: tools,
            alt: "Yellow and black heavy equipment on brown grass field",
            first: true,
          },
          {
            heading: "Simplicity and Cost-Efficiency",
            content:
              "Discover affordable, hassle-free shipping solutions with ARD GHADEER's wide range of services. Our streamlined processes make global transportation efficient while keeping costs within your budget.",
            svg: "dashboard",
            src: dashboard,
            alt: "A screenshot or graphic representation of the intuitive dashboard",
            second: true,
          },
          {
            heading: "Comprehensive Documentation",
            content:
              "Navigate shipping requirements with ease using ARD GHADEER's detailed guides and resources. From customs paperwork to delivery tracking, we provide thorough documentation for a smooth shipping experience.",
            svg: "house",
            src: construction,
            alt: "Gray metal building frame near tower crane during daytime",
          },
        ]}
      />

      <TestimonialsSection
        title="Fast-Track Your Shipments"
        subTitle="At ARD GHADEER, we ensure a swift and seamless shipping experience with instant logistics solutions. Discover the future of global shipping, redefined for speed and reliability."
        ;
        testimonials={[
          {
            content:
              "ARD GHADEER transformed our logistics operations. Their swift response times and efficient services helped us meet tight deadlines effortlessly. Truly a game-changer in global shipping!",
            author: "Michael Mensah",
            role: "Logistics Director | GlobalTrade Solutions Inc.",
            avatarSrc:
              "https://res.cloudinary.com/dzh8mryxw/image/upload/v1734371171/kaysha-OJvh3njqTTQ-unsplash_od6pkn.jpg",
          },
        ]}
        statistics={[
          {
            count: "70k+",
            description:
              "shipments delivered — across continents, serving small businesses to global enterprises.",
          },
          {
            count: "45%",
            description:
              "increase in delivery efficiency achieved with ARD GHADEER’s advanced logistics tools and streamlined operations.",
          },
          {
            count: "25.3%",
            description:
              "reduction in shipping costs reported by long-term clients using our cost-optimized solutions.",
          },
          {
            count: "3x",
            description: "faster transit times with our innovative route planning and real-time cargo tracking systems.",
          },
        ]}
      />

      <PricingSection pricing={pricing} />

      <FAQ title="Frequently<br />asked questions" faqs={faqs} />

      
    </main>
  </div>
</MainLayout>

<script define:vars={{ backgroundImages }}>
  const backgrounds = backgroundImages.map(img => img.src);
  
  let currentIndex = 0;
  const slideshowElement = document.getElementById('slideshowBackground');

  function changeBackground() {
    currentIndex = (currentIndex + 1) % backgrounds.length;
    if (slideshowElement) {
      slideshowElement.style.backgroundImage = `url('${backgrounds[currentIndex]}')`;
    }
  }

  setInterval(changeBackground, 10000);
</script>
