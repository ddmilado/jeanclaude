---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "@images/blueprints-image.avif";
import personWorking from "@images/person-working.avif";
import beforeAfter from "@images/before-after.avif";
import constructionWorkers from "@images/construction-workers.avif";
import aerialView from "@images/aerial-view.avif";
import usingTools from "@images/using-tools.avif";
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Import & Export",
    subTitle:
      "Efficient handling of international trade to and from major destinations, ensuring smooth documentation, timely deliveries, and cost-effective solutions.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "Blueprints and digital tablet with construction plans.",
    imgTwo: personWorking,
    imgTwoAlt: "Person working in the office",
  },
  {
    isRightSection: false,
    title: "Air Freight Service",
    subTitle:
      "Fast and reliable air cargo solutions for time-sensitive shipments, connecting businesses to global markets.",
    img: beforeAfter,
    imgAlt: "Construction site before and after",
    btnExists: false,
    btnTitle: "Learn More",
    btnURL: "#",
  },
  {
    isRightSection: true,
    title: "Sea Freight Service",
    subTitle:
      "Cost-efficient shipping for large, heavy, or bulk cargo with flexible container solutions and worldwide port-to-port coverage.",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: " project",
    imgTwo: aerialView,
    imgTwoAlt: "Aerial",
  },
  {
    isRightSection: false,
    title: "Land Freight Service",
    subTitle:
      "Safe and dependable trucking services for domestic and cross-border deliveries, ensuring your cargo reaches its destination on time.",
    img: usingTools,
    imgAlt:
      "Man",
  },
  {
    isRightSection: true,
    title: "Travel & Booking Services",
    subTitle:
      "At ARD GHADEER, we simplify travel and official processes with a comprehensive range of services. From airline and hotel bookings to customized tour packages, we ensure seamless and stress-free travel experiences. Need reliable ferry reservations? Our 2GO booking has you covered. For official matters, we assist with passport applications, visa processing, and scheduling PSA/NBI appointments. We also provide efficient DFA Apostille services to authenticate your documents for international use. Whether for business, leisure, or personal needs, ARD GHADEER is your trusted partner for smooth and hassle-free journeys.",
    single: false,
    imgOne: progressBuilding,
    imgOneAlt: "In",
    imgTwo: underConstruction,
    imgTwoAlt: "Brown",
    btnExists: false,
    btnTitle: "Read more",
    btnURL: "#",
  },
];

const pageTitle: string = `Services | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://screwfast.uk/services",
    "url": "https://screwfast.uk/services",
    "name": "Expert Consultation Services | ScrewFast",
    "description": "Uniting expertise with your vision, ScrewFast provides exceptional service and comprehensive solutions in the hardware and construction industry, from consultation to project completion.",
    "isPartOf": {
        "@type": "WebSite",
        "url": "https://screwfast.uk",
        "name": "ScrewFast",
        "description": "ScrewFast offers top-tier hardware tools and expert construction services to meet all your project needs."
    },
    "inLanguage": "en-US"
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
    title="Seamless Shipping Solutions Tailored to Your Business Needs"
    subTitle="At ARD GHADEER, we don’t just deliver packages—we deliver reliability, efficiency, and peace of mind. Our comprehensive shipping services are designed to meet the unique demands of businesses and individuals, ensuring every shipment arrives on time, every time."
    btnExists={true}
    btnTitle="Schedule a Consultation"
    btnURL="#"
  />
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map(article => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <!--FeaturesStats section showcases essential stats valuable to users-->
  <FeaturesStats
    title="By the Numbers"
    subTitle="Our commitment to excellence and reliability is evident in every shipment and service we provide. At ARD GHADEER, we strive to deliver seamless logistics and travel solutions that exceed expectations."
    mainStatTitle="96%"
    mainStatSubTitle="of our clients rate their experience with ARD GHADEER as exceptional"
    stats={[
      {
        stat: "99.8%",
        description: "on-time delivery rate across all freight services",
      },
      {
        stat: "5,000+",
        description: "shipments successfully delivered globally",
      },
      {
        stat: "85%",
        description: "client retention rate year-over-year",
      },
    ]}
  />
</MainLayout>
