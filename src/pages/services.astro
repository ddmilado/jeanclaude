---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "@images/blueprints-image.jpg";
import personWorking from "@images/person-working.jpg";
import beforeAfter from "@images/before-after.jpg";
import constructionWorkers from "@images/construction-workers.jpg";
import aerialView from "@images/aerial-view.jpg";
import usingTools from "@images/using-tools.jpg";
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Visa & Travel Documentation Services",
    subTitle:
      "Navigating international travel requirements can be overwhelming. We simplify the process by assisting with visa applications, travel insurance, passport renewals, and other necessary travel documents. Our team will guide you through every step, ensuring a smooth, stress-free journey.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "Blueprints and digital tablet with construction plans.",
    imgTwo: personWorking,
    imgTwoAlt: "Person working in the office",
  },
  {
    isRightSection: false,
    title: "Corporate & Group Travel Services",
    subTitle:
      "Streamlined planning for corporate retreats, business trips, and group tours. We handle all logistics, from transportation to accommodations and activities, ensuring a smooth, professional experience for your team or group. Let us take care of the details so you can focus on what matters most.",
    img: beforeAfter,
    imgAlt: "Construction site before and after",
    btnExists: false,
    btnTitle: "Learn More",
    btnURL: "#",
  },
  {
    isRightSection: true,
    title: "Destination Weddings & Special Events",
    subTitle:
      "Make your dream event a reality with PKT Travels, Tours & Events. We specialize in destination weddings, milestone celebrations, and large-scale events. From venue selection to on-the-day coordination, we offer full-service event planning, ensuring every detail is perfect.",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: " project",
    imgTwo: aerialView,
    imgTwoAlt: "Aerial",
  },
  {
    isRightSection: false,
    title: "Luxury & Custom Travel Experiences",
    subTitle:
      "Whether you’re seeking a luxurious getaway, a once-in-a-lifetime adventure, or a unique experience, our team is here to design the perfect itinerary for you. Private tours, exclusive destinations, and tailored experiences are just the beginning of what we can offer.",
    img: usingTools,
    imgAlt:
      "Man",
  },
  {
    isRightSection: true,
    title: "Travel & Booking Services",
    subTitle:
      "At PKT Travels, we simplify travel and official processes with a comprehensive range of services. From airline and hotel bookings to customized tour packages, we ensure seamless and stress-free travel experiences. Need reliable ferry reservations? Our 2GO booking has you covered. For official matters, we assist with passport applications, visa processing, and scheduling PSA/NBI appointments. We also provide efficient DFA Apostille services to authenticate your documents for international use. Whether for business, leisure, or personal needs, PKT travels, tours & events  is your trusted partner for smooth and hassle-free journeys.",
    single: false,
    imgOne: progressBuilding,
    imgOneAlt: "In",
    imgTwo: underConstruction,
    imgTwoAlt: "Brown",
    btnExists: false,
    btnTitle: "Read more",
    btnURL: "#",
  },
];

const pageTitle: string = `Services | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://screwfast.uk/services",
    "url": "https://screwfast.uk/services",
    "name": "Expert Consultation Services | ScrewFast",
    "description": "Uniting expertise with your vision, ScrewFast provides exceptional service and comprehensive solutions in the hardware and construction industry, from consultation to project completion.",
    "isPartOf": {
        "@type": "WebSite",
        "url": "https://screwfast.uk",
        "name": "ScrewFast",
        "description": "ScrewFast offers top-tier hardware tools and expert construction services to meet all your project needs."
    },
    "inLanguage": "en-US"
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
    title="Seamless Travel & Event Solutions Tailored to Your Needs"
    subTitle="At PKT Travels, Tours & Events, we don’t just book trips or organize events—we deliver exceptional experiences, peace of mind, and flawless execution. Our comprehensive travel and event planning services are designed to meet the unique needs of individuals, families, and businesses, ensuring every journey and event is seamless, unforgettable, and stress-free."
    btnExists={true}
    btnTitle="Schedule a Consultation"
    btnURL="/contact"
  />
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map(article => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <!--FeaturesStats section showcases essential stats valuable to users-->
  <FeaturesStats
    title="By the Numbers"
    subTitle="At PKT Travels, Tours & Events, we’re committed to providing outstanding service that exceeds expectations. From custom travel itineraries to flawless event execution, we take pride in delivering unforgettable experiences."
    mainStatTitle="96%"
    mainStatSubTitle="96% of our clients rate their experience as exceptional"
    stats={[
      {
        stat: "99.8%",
        description: "on-time travel and event service delivery rate",
      },
      {
        stat: "2,000+",
        description: "successful travel bookings and events coordinated globally",
      },
      {
        stat: "85%",
        description: "visa processing success rate",
      },
    ]}
  />
</MainLayout>
